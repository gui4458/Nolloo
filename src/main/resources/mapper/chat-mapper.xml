<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">

<mapper namespace="chatMapper">
    <!-- 채팅 메시지 저장 쿼리 -->
    <!-- 채팅 메시지 저장 쿼리 -->
    <insert id="insertChatMessage" parameterType="com.green.Nolloo.chat.vo.ChatMessageVO">
        INSERT INTO CHAT_MESSAGE (ROOM_CODE, SENDER, MESSAGE)
        VALUES (#{roomId}, #{sender}, #{message})
    </insert>

    <!-- 채팅방 별 메시지 조회 쿼리 -->
    <select id="selectChatMessagesByRoom" parameterType="int" resultType="com.green.Nolloo.chat.vo.ChatMessageVO">
        SELECT * FROM CHAT_MESSAGE WHERE ROOM_CODE = #{roomId}
    </select>

</mapper>






























