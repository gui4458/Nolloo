<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">

<mapper namespace="chatMapper">
    <!-- 채팅 메시지 저장 쿼리 -->
    <insert id="insertChatMessage">
        INSERT INTO CHAT_MESSAGE(
        ROOM_CODE
        , SENDER
        , MESSAGE
        )
        VALUES
        (
        #{roomCode}
        , #{sender}
        , #{message}
        )
    </insert>
    <insert id="insertChatRoom">
        INSERT INTO CHAT_ROOM(
        ROOM_NAME
        ,ITEM_CODE
        ,FOUNDER
        )
        VALUES
        (
        #{roomName}
        ,#{itemCode}
        ,#{founder})
    </insert>

    <!-- 특정 채팅방의 메시지 검색 쿼리 -->
    <select id="selectChatMessagesByRoom" resultType="com.green.Nolloo.chat.vo.ChatMessageVO">
        SELECT * FROM CHAT_MESSAGE WHERE ROOM_CODE = #{roomCode}
    </select>
</mapper>






























